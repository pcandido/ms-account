{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@main/*": [
        "./src/main/*"
      ],
      "@presentation/*": [
        "./src/presentation/*"
      ],
      "@domain/*": [
        "./src/domain/*"
      ],
      "@data/*": [
        "./src/data/*"
      ],
      "@infra/*": [
        "./src/infra/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
    },
    "rootDirs": [
      "./src",
    ],
    "strict": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/*",
    "dist"
  ]
}
